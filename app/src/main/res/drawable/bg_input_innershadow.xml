<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#FFFFFFFF"/>
        </shape>
    </item>


    <item android:bottom="34dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:type="linear"
                android:angle="270"
            android:startColor="@color/inner_shadow_25"
            android:centerColor="#1A000000"
            android:endColor="#00000000"/>
        </shape>
    </item>


    <item android:top="34dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#0D000000"
            android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>
