<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Gri alan (foto_de_camera.png) + yazı -->
    <FrameLayout
        android:id="@+id/cameraFrame"
        android:layout_width="343dp"
        android:layout_height="420dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAbrir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivFotoCamara"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/foto_de_camera" />

    </FrameLayout>



    <!-- Abrir butonu (236x51, radius 50, shadow Y=2 benzeri) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAbrir"
        android:layout_width="236dp"
        android:layout_height="51dp"
        android:layout_marginBottom="24dp"
        android:text="Abrir"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:backgroundTint="#929292"
        app:cornerRadius="50dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/navBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ALT TOOLBAR (Inicio/Perfil ile aynı) -->
    <ImageView
        android:id="@+id/navBackground"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/nav_background_curve"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Home -->
    <ImageView
        android:id="@+id/navHome"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/home_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camara (sol) - logo_camera -->
    <ImageView
        android:id="@+id/navCamara"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/logo_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Perfil (sağ) -->
    <ImageView
        android:id="@+id/navRight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/perfil_inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
