<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PerfilActivity">

        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Perfil"
            android:textColor="#3D3DA8"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnAjustes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ajustes"
            android:src="@drawable/ajustes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dividerTop"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTituloPerfil" />

        <!-- FrameLayout por foto de perfil y buton plus -->
        <FrameLayout
            android:id="@+id/profileImageContainer"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_profile_circle"
            app:layout_constraintTop_toBottomOf="@id/dividerTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="4dp"
                android:background="@drawable/profile_image_oval"
                android:clipToOutline="true"
                android:contentDescription="Foto de perfil"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_perfil" />

            <ImageButton
                android:id="@+id/btnChangePhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Cambiar foto"
                android:src="@drawable/gridicons_add" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_regular"
            android:text="texto-nombre del usuario"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/profileImageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cuenta / Ayuda -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCuentaAyuda"
            android:layout_width="303dp"
            android:layout_height="136dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="7dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--Cuenta -->
                <LinearLayout
                    android:id="@+id/btnCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/ivCuentaIcon"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:contentDescription="Cuenta"
                        android:src="@drawable/iconamoon_profile" />

                    <TextView
                        android:id="@+id/tvCuenta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Cuenta"
                        android:textColor="#3D3DA8"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/ivCuentaArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Ir a Cuenta"
                        android:src="@drawable/icon_arrow_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <!-- Ayuda -->
                <LinearLayout
                    android:id="@+id/btnAyuda"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivAyudaIcon"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/help"
                        android:contentDescription="Ayuda" />

                    <TextView
                        android:id="@+id/tvAyuda"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Ayuda"
                        android:textSize="20sp"
                        android:textColor="#3D3DA8"
                        android:fontFamily="@font/inter_semibold" />

                    <ImageView
                        android:id="@+id/ivAyudaArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_arrow_right"
                        android:contentDescription="Ir a Ayuda" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="229dp"
            android:layout_height="51dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="64dp"
            android:backgroundTint="@color/google_btn_color"
            android:elevation="2dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="Cerrar sesion"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/navBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardCuentaAyuda" />

        <!-- BARRA DE NAVEGACIÃ“N  -->
        <ImageView
            android:id="@+id/navBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/nav_background_curve"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/home_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/navCamara"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/camara_inicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/navRight"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/perfil_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>