<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F7">

    <!-- TOP BAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#5A56B3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazon"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CONTENIDO SCROLL -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TODO el contenido con ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Estado (icono + texto) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEstado"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#C9C8FF"
                app:strokeColor="#B7B6FD"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivBox"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_box_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tvEstado"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recibido"
                        android:textStyle="bold"
                        android:textColor="#3D3DA8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="16dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Detalles del paquete -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetalles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="#CFCFEA"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/cardEstado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvDetallesTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detalles del paquete"
                        android:textStyle="bold"
                        android:textColor="#2B2B2B"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvRemitente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remitente    Amazon"
                        android:textColor="#555555"
                        app:layout_constraintTop_toBottomOf="@id/tvDetallesTitulo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvSeguimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguimiento  1234567890"
                        android:textColor="#555555"
                        app:layout_constraintTop_toBottomOf="@id/tvRemitente"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación     Buzón 1"
                        android:textColor="#555555"
                        app:layout_constraintTop_toBottomOf="@id/tvSeguimiento"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="2dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Título productos -->
            <TextView
                android:id="@+id/tvProductos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Productos comprados"
                android:textStyle="bold"
                android:textColor="#2B2B2B"
                app:layout_constraintTop_toBottomOf="@id/cardDetalles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Lista de productos (estática en este mismo archivo) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardListaProductos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E3E3EC"
                app:cardBackgroundColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tvProductos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- Producto 1 -->
                    <ImageView
                        android:id="@+id/p1_img"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/producto1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/p1_nombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Auriculares inalámbricos"
                        android:textStyle="bold"
                        android:textColor="#2B2B2B"
                        app:layout_constraintStart_toEndOf="@id/p1_img"
                        app:layout_constraintTop_toTopOf="@id/p1_img"
                        app:layout_constraintEnd_toStartOf="@+id/p1_qty"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/p1_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29,99€"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/p1_nombre"
                        app:layout_constraintTop_toBottomOf="@id/p1_nombre"/>

                    <TextView
                        android:id="@+id/p1_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: 1"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/p1_nombre"/>

                    <View
                        android:id="@+id/div1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#EEEEF4"
                        app:layout_constraintTop_toBottomOf="@id/p1_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"/>

                    <!-- Producto 2 -->
                    <ImageView
                        android:id="@+id/p2_img"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/producto2"
                        app:layout_constraintTop_toBottomOf="@id/div1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/p2_nombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Smartwatch"
                        android:textStyle="bold"
                        android:textColor="#2B2B2B"
                        app:layout_constraintStart_toEndOf="@id/p2_img"
                        app:layout_constraintTop_toTopOf="@id/p2_img"
                        app:layout_constraintEnd_toStartOf="@+id/p2_qty"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/p2_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="79,99€"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/p2_nombre"
                        app:layout_constraintTop_toBottomOf="@id/p2_nombre"/>

                    <TextView
                        android:id="@+id/p2_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: 1"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/p2_nombre"/>

                    <View
                        android:id="@+id/div2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="#EEEEF4"
                        app:layout_constraintTop_toBottomOf="@id/p2_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"/>

                    <!-- Producto 3 -->
                    <ImageView
                        android:id="@+id/p3_img"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/producto3"
                        app:layout_constraintTop_toBottomOf="@id/div2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/p3_nombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Libro"
                        android:textStyle="bold"
                        android:textColor="#2B2B2B"
                        app:layout_constraintStart_toEndOf="@id/p3_img"
                        app:layout_constraintTop_toTopOf="@id/p3_img"
                        app:layout_constraintEnd_toStartOf="@+id/p3_qty"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/p3_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12,99€"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/p3_nombre"
                        app:layout_constraintTop_toBottomOf="@id/p3_nombre"/>

                    <TextView
                        android:id="@+id/p3_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: 2"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/p3_nombre"
                        android:layout_marginBottom="8dp"/>

                    <!-- padding inferior de la card -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        app:layout_constraintTop_toBottomOf="@id/p3_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarcarRetirado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Marcar como retirado"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:backgroundTint="#3D3DA8"
                android:textColor="#FFFFFF"
                app:cornerRadius="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardListaProductos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
