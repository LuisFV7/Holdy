<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"> <!-- fondo negro semitransparente -->

    <!-- Tarjeta central de alerta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAlertaSeguridad"
        android:layout_width="260dp"
        android:layout_height="320dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Icono grande de alerta -->
            <ImageView
                android:id="@+id/imgAlertaGrande"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/urgente"  />

            <!-- Mensaje -->
            <TextView
                android:id="@+id/tvMensajeAlerta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Se ha detectado un golpe en el buzón"
                android:textColor="#23295C"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Botón cerrar -->
            <Button
                android:id="@+id/btnCerrarAlerta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cerrar"
                android:textAllCaps="false"
                android:backgroundTint="#4739C6"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
