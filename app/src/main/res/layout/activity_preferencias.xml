<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollPreferencias"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Başlık -->
        <TextView
            android:id="@+id/tvPreferenciasTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferencias"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- ========== NOTIFICACIONES ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Activar/Desactivar notificaciones" />

                <Switch
                    android:id="@+id/swNotifMaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entregas (paquete llegó)" />

                <Switch
                    android:id="@+id/swNotifEntregas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Apertura de la caja" />

                <Switch
                    android:id="@+id/swNotifApertura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Alertas de seguridad" />

                <Switch
                    android:id="@+id/swNotifSeguridad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!-- boşluk -->
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <!-- ========== CAJA ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buzon"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de  Buzon"
                android:paddingBottom="6dp" />

            <!-- VIEW MODE -->
            <LinearLayout
                android:id="@+id/rowBoxView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvBoxName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Home Box"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnEditBox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Editar"
                    android:src="@drawable/edit" />
            </LinearLayout>

            <!-- EDIT MODE -->
            <LinearLayout
                android:id="@+id/rowBoxEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:paddingVertical="6dp">

                <EditText
                    android:id="@+id/etBoxName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Ej: Home Box"
                    android:inputType="textPersonName" />

                <ImageButton
                    android:id="@+id/btnSaveBox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Guardar"
                    android:src="@drawable/guardar" />

                <ImageButton
                    android:id="@+id/btnCancelBox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Cancelar"
                    android:src="@drawable/cancel" />
            </LinearLayout>

        </LinearLayout>

        <!-- boşluk -->
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <!-- ========== EMERGENCIA ========== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergencia"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto de emergencia"
                android:paddingBottom="6dp" />

            <!-- VIEW MODE -->
            <LinearLayout
                android:id="@+id/rowEmView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre Apellidos"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvEmPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+34 600 000 000"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditEm"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Editar"
                    android:src="@drawable/edit" />
            </LinearLayout>

            <!-- EDIT MODE -->
            <LinearLayout
                android:id="@+id/rowEmEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingVertical="6dp">

                <EditText
                    android:id="@+id/etEmName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre y apellidos"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etEmPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:hint="+34 600 000 000"
                    android:inputType="phone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="6dp">

                    <ImageButton
                        android:id="@+id/btnSaveEm"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Guardar"
                        android:src="@drawable/guardar" />

                    <ImageButton
                        android:id="@+id/btnCancelEm"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Cancelar"
                        android:src="@drawable/cancel" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- alt boşluk -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- ✅ Sayfanın en altında tek updated yazısı -->
        <TextView
            android:id="@+id/tvUpdatedGlobal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizado: —"
            android:textSize="12sp"
            android:textColor="#8A8A8A"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="6dp" />

    </LinearLayout>
</ScrollView>
